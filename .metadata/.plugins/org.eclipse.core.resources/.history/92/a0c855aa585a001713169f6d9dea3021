function follow(id1,id2){
	type = "follow";
	$(".follow").toggleClass("following");
	if($(".follow").hasClass("following")){
		$(".following p")[0].innerHTML = "Unfollow";
	}
	else{
		type = "unfollow"
		$(".follow p")[0].innerHTML = "Follow";
	}
	$.ajax({
		type: "POST",
		url: "app",
		data: "type="+ type +"&id1=" + id1 + "&id2=" + id2
	});
}